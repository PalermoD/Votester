<% provide(:title, 'All users') %>
<h1>All Posts</h1>

<ul class="users">
  <% @posts.each do |post| %>
    <li>
	<h3 class="location">
		<%= post.user.location %>
	</h3>

	<h1>
		<%= link_to gravatar_for(post.user), post.user %>
		<%= link_to post.user.name, post.user, class: 'user_post_name' %>
	</h1>

	<p class="bio">
		<%= post.content %>

	</p>

	<h1><%= image_tag post.picture.url if post.picture? %></h1>

	<h2>
		Posted <%= time_ago_in_words(post.created_at) %> ago.
	</h2>

	<%= link_to like_post_path(@post), method: :put do %>
  Upvote
  <%= post.get_upvotes.size %>
<% end %>

<%= link_to dislike_post_path(@post), method: :put do %>
  Downvote
  <%= post.get_downvotes.size %>

<% end %>
	<% if current_user?(post.user) %>
	    <h2> <%= link_to "delete", post, method: :delete,
	    data: { confirm: "You sure?" }, class: 'delete_post' %></h2>
	<% end %>

</li>
  <% end %>
</ul>


