<% provide(:title, @user.name) %>
<div class="row">
  
    <section class="user_info col-md-8 col-md-offset-2">
      <h3 class="location">
      	<%= @user.location %>
      </h3>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p class="bio">
      	<%= @user.bio %>
      </p>
      
    </section>
  
</div>